@model ElectDiscipline_Web.Models.VM.DisciplineNumberUpdateVM

<form asp-action="UpdateDisciplineNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Discipline</h1>
        <hr />
        <input hidden asp-for="DisciplineNumber.DisciplineNo" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="DisciplineNumber.DisciplineNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DisciplineNumber.DisciplineNo" disabled class="form-control" />
                <span asp-validation-for="DisciplineNumber.DisciplineNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="DisciplineNumber.DisciplineId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="DisciplineNumber.DisciplineId" class="form-select" asp-items="@Model.DisciplineList">
                    <option disabled selected>--Select Discipline--</option>
                </select>
                <span asp-validation-for="DisciplineNumber.DisciplineId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="DisciplineNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="DisciplineNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="DisciplineNumber.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexDisciplineNumber" asp-controller="DisciplineNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
